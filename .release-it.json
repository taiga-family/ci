{
  "git": {
    "commitMessage": "chore(release): v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:@release-it/conventional-changelog:beforeRelease": [
      "npx prettier --write ./CHANGELOG.md"
    ],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
